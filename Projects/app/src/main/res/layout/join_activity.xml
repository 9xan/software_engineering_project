<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModeJoin_2_0.JoinActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarJoin"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ee6055"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/NickViewJoin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/join"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarJoin" />


    <TextView
        android:id="@+id/connectionText"
        android:layout_width="227dp"
        android:layout_height="47dp"
        android:layout_marginStart="92dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="100dp"
        android:text="@string/peer_search"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/progressBarConnection"
        style="?android:attr/progressBarStyle"
        android:layout_width="120dp"
        android:layout_height="118dp"
        android:layout_marginStart="146dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="146dp"
        android:progressTint="#E91E63"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NickViewJoin" />


</androidx.constraintlayout.widget.ConstraintLayout>