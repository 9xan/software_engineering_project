<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textViewMasterName"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutPeers"
        android:layout_width="358dp"
        android:layout_height="430dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMasterName">


        <TextView
            android:id="@+id/peer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="wait for peer 1"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/peer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="wait for peer 2"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/peer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="wait for peer 3"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/peer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="wait for peer 4"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/peer5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="wait for peer 5"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/peer6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="wait for peer 6"
            android:textAlignment="center"
            android:textSize="24sp" />
    </LinearLayout>


    <Button
        android:id="@+id/finishSetupButton"
        android:layout_width="150dp"
        android:layout_height="47dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="105dp"
        android:text="Finish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutPeers" />


</androidx.constraintlayout.widget.ConstraintLayout>